public class Main
{
	public static void main(String[] args) {
	int [] [] arr;
	arr= new int [1][3];
	arr[0][0]=2;
	arr[0][1]=10;
	arr[0][2]=3;
	
	System.out.println(arr[0][0]);
	System.out.println(arr[0][1]);
	System.out.println(arr[0][2]);
	
		
	}
}
output:
2
10
3

//printing 2D-array elements //
public class Main
{
	public static void main(String[] args) {
	int [] [] arr = {{1,2},{4,5}};
	

	for (int i=0;i<2;i++){
	    for (int j=0;j<2;j++){
	        
	        System.out.print(arr[i][j]+ " ");
	        
	    }System.out.println();
	    
	}
		
	}
}
output:
1 2 
4 5 

//2D-array with 3 rows and 3 columns
public class Main
{
	public static void main(String[] args) {
	int [] [] arr;
	arr= new int [3][3];
	arr[0][0]=1;
	arr[0][1]=2;
	arr[0][2]=3;
	arr[1][0]=4;
	arr[1][1]=5;
	arr[1][2]=6;
	arr[2][0]=7;
	arr[2][1]=8;
	arr[2][2]=9;

	for (int i=0;i<3;i++){
	    for (int j=0;j<3;j++){
	        System.out.print(arr[i][j]+" ");
	        
	    }System.out.println();
	    
	}

	}
}
