import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    Scanner num = new Scanner (System.in);
	    System.out.println("enter no");
	    int no = num.nextInt();
	    while (no>=0){
	        
	        if (no %2 == 0){
	            System.out.println( " It is a even number" + " " + no );
	        }
	        else{
	             System.out.println("It is a odd number" +  " " + no);
	        }
	        no--;
	    }
	    
	}
}
