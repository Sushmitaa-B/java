(* with parameter *)
public class Main
{
	public static void mymethod(String name){
	    System.out.println(name);
	}
	
	
	
	public static void main(String[] args) {
	    mymethod("Sushmitaa");
		
	}
}

(*with parameter addition  *)

public class Main
{
	public static void mymethod(int x,int y){
	    System.out.println( x + y);
	    
	}
	
	
	
	public static void main(String[] args) {
	    mymethod(5,5);
		
	}
}
(*with parameter-first name,last name  *)
public class Main
{
	public static void mymethod(String name,String lname){
	    System.out.println(name+" "+lname);
	}
	
	
	
	public static void main(String[] args) {
	    mymethod("Sushmitaa","Tarshita");
		
	}
}
(* with parameter-personal details *)

public class Main
{
	public static void mymethod(String name,String lname,int age,Double height){
	    System.out.println(name+" "+lname+" "+age+"years"+" "+height+"cm");
	}
	
	
	
	public static void main(String[] args) {
	    mymethod("Sushmitaa","Baskaran",19,150.00);
		
	}
}
(* with parameter -using return *)
public class Main

{
	public static int mymethod(int x,int y){
	    return x + y;
	   
	    
	}
	
	
	
	public static void main(String[] args) {
	    System.out.println(mymethod(5,5));
	    System.out.println(mymethod(6,9));
		
	}
}

(* without parameter *)
public class Main
{
	public static void mymethod(){
	    System.out.println("Sushmitaa");
	}
	
	
	
	public static void main(String[] args) {
	    mymethod();
		
	}
}


//instance object//

//syntax:
modifier returntype name(){
//body of the method
}//


public class Main
{
	public static void main(String[] args) {
	    Main obj = new Main ();
	    obj.sample();

	}
	
	public void sample(){
	    int a=10;
	    System.out.println(a);
	    
	    
	} 
}


 class Main
{
	public static void main(String[] args) {
//below we called the Main1 instead of Main beacuse,we need to call the class name where we created instance object//
	    Main1 obj = new Main1 ();
	    obj.add();

	}
}

 class Main1{
    public void add(){
	    int a=10;
	    int b= 15;
	    System.out.println(a + b);
	    
	    
	} 
}


//using sub classes //
 class Main
{
	public static void main(String[] args) {
	    Addition obj = new Addition ();
	    obj.add(10,20);
	    Subtraction ob = new Subtraction ();
	    ob.sub(30,12);

	}
}

 class Addition{
    public void add(int a, int b){  
	    
	    System.out.println(a + b);
	    
	    
	} 
}class Subtraction{
    public void sub(int c,int d){
	    
	    System.out.println(c - d);
	    
	    
	} 
}

